<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Ingresa tus datos</h1>

    <form action="" method="POST" class="mt-4">

        <input type="text" name="name" placeholder="Nombre"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
            pattern="^[a-zA-Z]+$" required>

        <input type="email" name="email" placeholder="Email"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>


        <input type="password" name="password" placeholder="Contraseña"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <select name="securityQuestion" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
            <option value="" selected disabled>Pregunta de seguridad</option>
            <option value="q1">¿Cuál es tu color favorito?</option>
            <option value="q2">¿Cuál es el nombre de tu mascota?</option>
            <option value="q3">¿Cuál es tu película favorita?</option>
            <!-- Agrega más opciones de preguntas aquí -->
        </select>

        <input type="text" name="securityAnswer" placeholder="Respuesta de seguridad"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <button type="submit"
            class="rounded-md bg-red-500 w-full text-lg text-white font-semibold p-2 my-3 hover :bg-red-600 focus:bg-red-700">Unirse</button>

    </form>

</div>